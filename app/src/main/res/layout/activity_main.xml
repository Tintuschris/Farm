<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.7"
        android:src="@drawable/farmbg" />


<TextView
    android:id="@+id/welcome_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="WELCOME!"
    android:textSize="40sp"
    android:textFontWeight="900"
    android:textStyle="bold"
    android:textColor="#FFFFFF"
    android:layout_marginTop="250dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/sign_up_text"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintHorizontal_bias="0.5"
    />

<TextView
    android:id="@+id/sign_up_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="26sp"
    android:text="Please sign up here"
    android:textColor="#FFFFFF"
    android:layout_marginTop="30dp"
    app:layout_constraintTop_toBottomOf="@+id/welcome_text"
    app:layout_constraintBottom_toTopOf="@+id/launch_signup_button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintHorizontal_bias="0.5"
    />

<Button
    android:id="@+id/launch_signup_button"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/buttonbg"
    android:text="@string/launch_signup"
    android:textSize="20sp"
    android:textFontWeight="700"
    android:textStyle="bold"
    android:textColor="@color/main_color"
    android:layout_marginBottom="40dp"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@+id/sign_up_text"
    app:layout_constraintBottom_toTopOf="@+id/login_text"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"

    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintHorizontal_bias="0.5"
    />

<TextView
    android:id="@+id/login_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Already signed up ? log in here"
    android:textSize="16sp"
    android:textColor="#FFFFFF"
    app:layout_constraintTop_toBottomOf="@+id/launch_signup_button"
    app:layout_constraintBottom_toTopOf="@+id/launch_login_button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintHorizontal_bias="0.5" />
<Button
    android:id="@+id/launch_login_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_background"
    android:text="@string/login"
    android:textSize="20sp"
    android:textFontWeight="900"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@+id/login_text"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintHorizontal_bias="0.5"
    />
</androidx.constraintlayout.widget.ConstraintLayout>